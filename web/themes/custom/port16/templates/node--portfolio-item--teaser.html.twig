{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
    'clearfix',
  ]
%}
<article{{ attributes.addClass(classes) }}>
    {{ title_prefix }}    {{ title_suffix }}
    {% embed '@myComponents/project_teaser/_project_teaser.html.twig' with {
    project_type: content.field_tags,
    title: label,
    text: content.field_description,
    link_url: url,
    link_text: 'View Work',
    image_1: content.field_preview_image,
    image_2: content.field_preview_image,    
    display_icon: true
  } %}
  {% endembed %}

</article>