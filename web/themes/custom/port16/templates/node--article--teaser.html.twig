{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
    'clearfix',
  ]
%}
<article{{ attributes.addClass(classes) }}>
    {{ title_prefix }}    {{ title_suffix }}
    {% embed '@myComponents/blog_teaser/_blog_teaser.html.twig' with {
    top_title:  label,
    top_link_url: URL,
    top_link_text: 'The full view of this Content Type will have its own layout, to be styled according to this page.',
    article: 'RECENT ARTICLE | ' ~ date,
    title: label,
    description1: content.body,
    inside_link_url: url,
    inside_link_text: 'Cras mattis consectetur',
    description2: content.body,
    link_text: 'Full Article',
    link_url: url,
    image: content.field_image,
  } %}
  {% endembed %}
  
</article>